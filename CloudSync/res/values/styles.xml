<resources>

    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!-- Main theme colors -->
        <!--   your app branding color for the app bar -->
        <item name="android:colorPrimary">#00BCD4</item>
        <!--   darker variant for the status bar and contextual app bars -->
        <item name="android:colorPrimaryDark">#0097A7</item>
        <!--   theme UI controls like checkboxes and text fields -->
        <item name="android:colorAccent">#03A9F4</item>
        <!--   theme text color primary -->
        <item name="android:textColorPrimary">#FFFFFF</item>

    </style>

    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:windowBackground">@color/background_window</item>
        <item name="android:actionBarStyle">@style/ActionBarStyle</item>
    </style>

    <style name="ActionBarStyle" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:icon">@drawable/ic_launcher_actionbar</item>
        <item name="android:background">#ff176cec</item>
    </style>

</resources>